<div class="booyah-box">
  <div class="row">
    <div class="col-4">
      <center>
        <%= image_tag 'user.png' %>
      </center>
    </div>

    <div class="col-8">
      <h1><b><%= @user.email %></b></h1>
      <h3>Member Since: <%= @user.created_at .strftime("%d %B %Y") %></h3>
      <br/>
      <h4><%= @user.comments.count %> total comments</h4>
      <h4><%= @user.comments.where(rating: '5_stars').count %> total five star reviews</h4>
    </div>
  </div>
  <div class="clear"></div>
</div>  

<div class="booyah-box">
  <br/>
  <h1 class="text-center">My Comments</h1>
  <br/>
  <div class="row">
    <% @user.comments.each do |comment| %>
      <div class="col-12 col-sm-6">
        <h2 class="text-center"><%= link_to comment.place.name, place_path(comment.place) %></h2>
        <blockquote>
          <% if comment.humanized_rating.present? %>
            <b><%= comment.humanized_rating %></b> -
            <%= comment.message %>
          <% end %>
          <small><%= comment.user.email %></small>
        </blockquote>
      </div>  
    <% end %>
  </div>
</div>